@using Basic_model.Models
@model RoleBasedModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Authentication</title>
</head>
<body>
    <section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login</p>
                                    @using (Html.BeginForm("Login", "Register", FormMethod.Post, new { @class = "mx-1 mx-md-4" }))
                                    {

                                        <div class="d-flex flex-row align-items-center mb-2">

                                            <div class="form-outline flex-fill mb-0">
                                                @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})

                                                <label class="form-label" for="form3Example3c"><b>Email Id</b></label>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-2">

                                            <div class="form-outline flex-fill mb-0">
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control"})

                                                <label class="form-label" for="form3Example4c"><b>Password</b></label>
                                            </div>
                                        </div>

                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-2">
                                            <input type="submit" name="submit" id="submit" class="btn btn-primary btn-lg">
                                        </div>
                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-2">
                                            <h5>Don`t have an account? </h5>

                                            @Html.ActionLink("Register","Registration","Register",new{@class="link-danger"})

                                        </div>
                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-2">


                                            @Html.ActionLink("Forget Password","Forget_Pass","Register",new{@class="link-danger"})

                                        </div>
                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-2">
                                            <h5>@ViewBag.errormsg</h5>
                                        </div>
                                    }

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                         class="img-fluid" alt="Sample image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
