@using Basic_model.Models
@model Curd
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" rel="stylesheet" />
    <link href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" rel="stylesheet" />


    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    
    <section class="vh-200" style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                                    @using (Html.BeginForm("Registration", "Register", FormMethod.Post, new { @class = "mx-1 mx-md-4" }))
                                    {

                                        @Html.AntiForgeryToken()
                                        <div class="d-flex flex-row align-items-center mb-2">
                                            
                                            <div class="form-outline flex-fill mb-0">
                                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control"})

                                                <label class="form-label" for="form3Example1c"><b>Your Name</b></label>
                                                @Html.ValidationMessageFor(m=>m.Name,String.Empty,new{@style="color:red; !important"})
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-2">
                                            
                                            <div class="form-outline flex-fill mb-0">
                                                @Html.EditorFor(m => m.DOB, new { @class = "form-control"})
                                                
                                                <label class="form-label" for="form3Example3c"><b>DOB</b></label>
                                                @Html.ValidationMessageFor(m=>m.DOB)
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-2">
                                           
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label me-4" for="form3Example3c"><b>Gender</b></label>

                                                <div class="form-check form-check-inline mb-0 me-6">
                                                    
                                                    @Html.RadioButtonFor(m => m.Gender, "Male", new { id = "male-true"})
                                                    @Html.Label("male-true", "Male" ,new{@class="me-5"  })
                                                    @Html.RadioButtonFor(m => m.Gender, "Female", new { id = "female-true"})
                                                    @Html.Label("female-true", "Female")
                                                    @Html.ValidationMessageFor(m=>m.Gender)
                                                </div>
                                               
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-2">
                                            
                                            <div class="form-outline flex-fill mb-0">
                                                @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control"})

                                                <label class="form-label" for="form3Example3c"><b>Mobile</b></label>
                                                @Html.ValidationMessageFor(m=>m.Mobile)
                                            </div>
                                        </div>


                                        <div class="d-flex flex-row align-items-center mb-2">
                                           
                                            <div class="form-outline flex-fill mb-0">
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control"})

                                                <label class="form-label" for="form3Example3c"><b>Email Id</b></label>
                                                @Html.ValidationMessageFor(m=>m.Email)
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-2">
                                            
                                            <div class="form-outline flex-fill mb-0">
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control"})

                                                <label class="form-label" for="form3Example4c"><b>Password</b></label>
                                                @Html.ValidationMessageFor(m=>m.Password)
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-2">
                                            
                                            <div class="form-outline flex-fill mb-0">
                                                @Html.PasswordFor(m => m.Con_password, new { @class = "form-control"})

                                                <label class="form-label" for="form3Example4c"><b>Confirm Password</b></label>
                                                @Html.ValidationMessageFor(m=>m.Con_password)
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-2">
                                            
                                            <div class="form-outline flex-fill mb-0">
                                                <div class="col-12">
                                                    @Html.DropDownListFor(m => m.Role, new List<SelectListItem> {
                                                    new SelectListItem { Text="--Select--",Value="0"},
                                                    new SelectListItem { Text="Student",Value="Student"},
                                                    new SelectListItem { Text="Admin",Value="Admin"},
                                                    new SelectListItem { Text="Librarian",Value="Librarian"},
                                                    new SelectListItem { Text="PT",Value="PT"}
                                                    }, new { @class = "select form-control" })
                                                    <label class="form-label" for="form3Example4cd"><b>Role</b></label>
                                                    @Html.ValidationMessageFor(m=>m.Role)
                                                </div>
                                                
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-2">
                                            
                                            <div class="form-outline flex-fill mb-0">
                                                <div class="col-12">
                                                    @Html.DropDownListFor(m => m.Status, new List<SelectListItem> {
                                                    new SelectListItem { Text="--Select--",Value="0"},
                                                    new SelectListItem { Text="Active",Value="true"},
                                                    new SelectListItem { Text="InActive",Value="false"}
                                                    }, new { @class = "select form-control" })
                                                    <label class="form-label" for="form3Example4cd"><b>Status</b></label>
                                                    @Html.ValidationMessageFor(m=>m.Status)
                                                    
                                                </div>
                                                
                                            </div>
                                        </div>

                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-2">
                                            <input type="submit" name="submit" id="submit" class="btn btn-primary btn-lg">
                                        </div>

                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-2">
                                            <h5>If you have an account? </h5>

                                            @Html.ActionLink("Login","Login","Register",new{@class="link-danger"})

                                        </div>
                                        
                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-2">
                                            <h5>@ViewBag.errormsg</h5>
                                        </div>

                                    }

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                         class="img-fluid" alt="Sample image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
